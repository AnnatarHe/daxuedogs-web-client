// 表单控件
.form-container
    flex-design()
    media-width()

.form
    flex-design()
    flex-direction column
    align-items center
    justify-content center
    .field
        display flex
        flex-direction row
        margin 1rem 0
        width 80%
        &.error
            border 1px solid red

        input
            padding 1rem
            width 100%
            font-size 1.1rem
            border none
            border-radius .3rem
            &:focus
                border-bottom 1px solid #888
                outline none
        .textarea
            display flex
            padding 1rem
            width 100%
            font-size 1.1rem
            border none
            border-radius .3rem
            resize none
            &:focus
                outline none
        &.inline-double
            display flex
            flex-direction row
            .form-label
                flex-design()
            .form-option
                flex-design()
    .submit-field
        display flex
        justify-content center
        align-items center
        width 100%

    .select
        width 100%
        font-size 1.1rem
        border-radius .3rem
        padding 1rem
        color #888
        border none
        &--white
            background-color #fff
