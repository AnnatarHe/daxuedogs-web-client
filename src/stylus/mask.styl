.mask
    display table
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(0,0,0, .5)
    z-index 99999
    .modal
        flex-design()
        media-width()
        flex-direction column
        align-items center
        justify-content center
        margin 3rem auto 0 auto
        .modal__head
            flex-design()
            width 100%
            border-top-left-radius .5rem
            border-top-right-radius .5rem
            h3
                margin-left 1rem
                color #555
        .modal__body
            flex-design()
            width 100%
            .content
                flex-design()
                max-height 30rem
                overflow-y scroll

        .modal__footer
            flex-design()
            width 100%
            align-items center
            justify-content flex-end
            padding .8rem 0
            .close
                margin-right 1rem
        &.modal--default
            .modal__head
                background-color #f6f6f6
                box-shadow rgba(0,0,0,.12) 0 1px 8px
                border-bottom 1px solid #CFCFCF
            .modal__body
                background-color #ddd
            .modal__footer
                background-color #f6f6f6
                box-shadow rgba(0,0,0,.12) 0 1px 8px
                border-top 1px solid #CFCFCF
